name "ddh"
description "Generic hasher"
homepage "https://github.com/dd86k/ddh"
authors "dd86k <dd@dax.moe>"
license "public domain"

buildType "debug-gc" {
	buildOptions "debugMode"
	dflags "-vgc" platform="dmd"
	dflags "--vgc" platform="ldc"
}

buildType "release-extreme" {
	buildOptions "releaseMode" "optimize"
	dflags "-boundscheck=off" "-checkaction=halt" platform="dmd"
	dflags "--boundscheck=off" "--checkaction=halt" "--float-abi=hard" "--ffast-math" platform="ldc"
}
